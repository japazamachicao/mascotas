# Environment variables for production (Cloud Run)
# DO NOT commit real values to git!

# Application
APP_NAME=Kivets
APP_ENV=production
APP_DEBUG=false
APP_URL=https://kivets.com

# Secrets from Secret Manager (referenced, not actual values)
APP_KEY=secret:APP_KEY:latest
DB_PASSWORD=secret:DB_PASSWORD:latest
GEMINI_API_KEY=secret:GEMINI_API_KEY:latest

# Database (Cloud SQL)
DB_CONNECTION=mysql
DB_HOST=/cloudsql/PROJECT_ID:REGION:kivets-db-production
DB_PORT=3306
DB_DATABASE=kivets_production
DB_USERNAME=root

# Logging
LOG_CHANNEL=stderr
LOG_LEVEL=info

# Session & Cache
SESSION_DRIVER=database
CACHE_DRIVER=database
QUEUE_CONNECTION=database

# Storage (Cloud Storage)
FILESYSTEM_DISK=gcs
GCS_BUCKET=PROJECT_ID-storage
GCS_PATH_PREFIX=
GCS_VISIBILITY=public

# Mail (configurar seg√∫n proveedor)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@kivets.com
MAIL_FROM_NAME="${APP_NAME}"

# AI Configuration
AI_PROVIDER=gemini
GEMINI_MODEL=gemini-2.0-flash-exp
AI_MAX_DAILY_ANALYSES=20

# Application specific
DAILY_ANALYSIS_LIMIT=3
